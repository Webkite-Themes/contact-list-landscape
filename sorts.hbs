{{#each sortableFacets}}
  {{#if @first}}
  <a class="webkite-toggle" href="#{{this.id}}" data-id="{{this.id}}" data-target=".sort-menu">sort<i></i></a>
  <ul class="sort-menu webkite-menu webkite-hide">
  {{/if}}
    <li class="webkite-apply-sort"><a href="#" class="{{#if (equals this ../currentSort)}}active{{/if}}" data-id="{{this.id}}"  data-sort="{{this}}">{{this}}</a></li>
  {{#if @last}}
  </ul>
  {{/if}}
{{/each}}
